<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.png</argument>
                <argument name="logo_width" xsi:type="number">176</argument>
                <argument name="logo_height" xsi:type="number">20</argument>
                <argument name="logo_alt" xsi:type="string">DREXEL</argument>
            </arguments>
        </referenceBlock>


        <referenceContainer name="footer-container">
                <block class="Magento\Cms\Block\Block" name="footer_links_block-elogic">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer_links_block-elogic</argument>
                </arguments>
                    
            </block>
        </referenceContainer>

        <referenceBlock name="footer_links" remove="true" />
        <referenceBlock name="copyright" remove="true" />

        <move element="form.subscribe" destination="footer-container" before="-" />
    </body>
</page>
